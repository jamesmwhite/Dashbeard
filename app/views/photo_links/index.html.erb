<p id="notice"><%= notice %></p>

<h1>Listing Photo Links</h1>

<table>
  <thead>
    <tr>
    <th></th>
      <th>Url</th>
      <th>Hidden</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= link_to 'New Photo link', new_photo_link_path %>
  <br/>
    <% @photo_links.each do |photo_link| %>
      <tr>
        <td><img src="<%= photo_link.url %>" width="100"></td>
        <td><%= photo_link.url %></td>
        <td><%= photo_link.hidden %></td>
        <td><%= link_to 'Show', photo_link %></td>
        <td><%= link_to 'Edit', edit_photo_link_path(photo_link) %></td>
        <td><%= button_to 'Delete', photo_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>